<p id="notice"><%= notice %></p>

<h1>用户列表</h1>

<table border="1px solid #ccc">
  <thead>
  <tr>
    <th>UID</th>
    <th>用户名</th>
    <th>BCrypt密码</th>
    <th>Email</th>
    <th colspan="3">操作</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.user_name %></td>
      <td><%= user.password_digest %></td>
      <td><%= user.email %></td>
      <td><%= link_to '显示', user %></td>
      <td><%= link_to '编辑', user_edit_path(user) %></td>
      <td><%= link_to '删除', user, method: :delete, data: { confirm: '你确定要删除吗?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

